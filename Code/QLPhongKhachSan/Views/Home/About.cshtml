<!-- ABOUT -->
<section class="section-about">
    <div class="container">
        <div class="row">
            <div class="wrap-about">
                @foreach (var item in Model)
                {
                    left = !left;
                    <div class="about-item">
                        @if (left)
                        {
                            <div class="col-xs-12 col-sm-12 col-md-6 col-lg-6 no-padding-left">
                                <div class="text">
                                    <h2 class="heading">@item.TieuDe</h2>
                                    <div class="desc">
                                        <p>@Html.Raw(item.NoiDung)</p>
                                    </div>
                                </div>
                            </div>
                        }
                        <div class="col-xs-12 col-sm-12 col-md-6 col-lg-6 no-padding-right">
                            <div class="section-slider height-v-about">
                                <div class="index121 owl-carousel  owl-theme">
                                    <div class="item">
                                        <img alt="Third slide" src="@item.HinhAnh" class="img-responsive">
                                    </div>
                                    <div class="item">
                                        <img alt="Third slide" src="@item.HinhAnh2" class="img-responsive">
                                    </div>
                                    <div class="item">
                                        <img alt="Third slide" src="@item.HinhAnh3" class="img-responsive">
                                    </div>
                                </div>
                            </div>
                        </div>
                        @if (left == false)
                        {
                            <div class="col-xs-12 col-sm-12 col-md-6 col-lg-6 no-padding-left">
                                <div class="text">
                                    <h2 class="heading">@item.TieuDe</h2>
                                    <div class="desc">
                                        <p>@Html.Raw(item.NoiDung)</p>
                                    </div>
                                </div>
                            </div>
                        }
                    </div>
                }
            </div>
        </div>
    </div>
</section>
<!-- END / ABOUT -->
