@model  QLPhongKhachSan.Models.Phong

@{
    ViewBag.Title = "Detail";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<section class="banner-tems text-center">
    <div class="container">
        <div class="banner-content">
            <h2>@Model.TenPhong</h2>
            <p>Phòng đẹp nhất cái Hà Nội này</p>
        </div>
    </div>
</section>
<!-- ROOM DETAIL -->
<section class="section-product-detail">
    <div class="container">
        <!-- DETAIL -->
        <div class="product-detail margin">
            <div class="row">
                <div class="col-lg-9">
                    <!-- LAGER IMGAE -->
                    <div class="wrapper">
                        <div class="gallery3">
                            @foreach (var item in Model.ImagePhongs)
                            {
                                <div class="gallery__img-block">
                                    <span class="">
                                        @item.TieuDe
                                    </span>
                                    <img src="@item.Link" class="">
                                </div>
                            }
                            <div class="gallery__controls">
                            </div>
                        </div>
                    </div>
                    <!-- END / LAGER IMGAE -->
                </div>
                <div class="col-lg-3">
                    <!-- FORM BOOK -->
                    @using (Html.BeginForm("Step2", "Reservation"))
                    {
                        <div class="product-detail_book">
                            <div class="product-detail_total">
                                <img src="~/favicon.png" alt="#" class="icon-logo">
                                <h6>ĐẶT PHÒNG NGAY</h6>
                                <p class="price">
                                    <span class="amout">@Model.GiaCoBan</span> /ngày
                                </p>
                                @Html.HiddenFor(q => q.IDPhong)
                            </div>
                            <div class="product-detail_form">
                                <div class="sidebar">
                                    @Html.Partial("Step1", new QLPhongKhachSan.Models.DatPhong())
                                </div>
                                <button class="btn btn-room btn-product">ĐẶT PHÒNG</button>
                            </div>
                        </div>
                    }
                    <!-- END / FORM BOOK -->
                </div>
            </div>
        </div>
