@model IEnumerable<QLPhongKhachSan.Models.Phong>

<!-- ANOTHER ACCOMMODATION -->
<div class="product-detail">
    <h2 class="product-detail_title">Các phòng khác</h2>
    <div class="product-detail_content">
        <div class="row">
            @foreach (var item in Model)
            {
                <!-- ITEM -->
                <div class="col-sm-6 col-md-3 col-lg-3">
                    <div class="product-detail_item">
                        <div class="img">
                            <a href="@Url.Action("Detail","Phong",new { item.IDPhong})"><img src="@item.Anh" alt="#"></a>
                        </div>
                        <div class="text">
                            <h2><a href="#">@item.TenPhong</a></h2>
                            <ul>
                                <li><i class="fa fa-child" aria-hidden="true"></i> Số người tối đa: @item.SoNguoiToiDa</li>
                                <li><i class="fa fa-bed" aria-hidden="true"></i> Giường: @item.Giuong</li>
                                <li><i class="fa fa-eye" aria-hidden="true"></i> Khung cảnh: @item.KhungCanh</li>
                            </ul>
                            <a href="@Url.Action("Detail","Phong",new { item.IDPhong})" class="btn btn-room">XEM</a>
                        </div>
                    </div>
                </div>
                <!-- END / ITEM -->
            }
        </div>
    </div>
</div>
<!-- END / ANOTHER ACCOMMODATION -->
